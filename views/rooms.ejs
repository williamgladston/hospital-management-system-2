<!DOCTYPE html>
<html>
<head>
  <title>Rooms</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <h1>All Rooms</h1>
  <a href="/rooms/new">Add New Room</a>
  <table border="1">
    <tr>
      <th>ID</th><th>Room Number</th><th>Type</th><th>Status</th><th>Actions</th>
    </tr>
    <% rooms.forEach(r => { %>
    <tr>
      <td><%= r.id %></td>
      <td><%= r.room_number %></td>
      <td><%= r.type %></td>
      <td><%= r.status %></td>
      <td>
        <a href="/rooms/edit/<%= r.id %>">Edit</a>
        <a href="/rooms/delete/<%= r.id %>" onclick="return confirm('Delete this room?')">Delete</a>
      </td>
    </tr>
    <% }) %>
  </table>
</body>
</html>