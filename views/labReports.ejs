<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Lab Reports</title>
</head>
<body>
  <h2>Lab Reports</h2>
  <a href="/lab-reports/new">Create New Report</a>
  <table>
    <thead>
      <tr>
        <th>Patient ID</th>
        <th>Report Details</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% reports.forEach(report => { %>
        <tr>
          <td><%= report.patient_id %></td>
          <td><%= report.report_details %></td>
          <td>
            <a href="/lab-reports/delete/<%= report.id %>">Delete</a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>